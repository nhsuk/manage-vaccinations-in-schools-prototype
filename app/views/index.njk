{% extends "_layouts/default.njk" %}

{% set public = true %}
{% set title = serviceName + " (Mavis)" %}

{% block content %}
  <div class="nhsuk-u-width-two-thirds">
    {{ heading({
      size: "xl",
      title: title
    }) }}

    {% filter nhsukMarkdown %}
Use this service to:

- upload cohort lists
- manage vaccination sessions
- triage answers to health questions
- record vaccinations
- view and download performance reports
    {% endfilter %}

    {{ button({
      text: "Start now",
      href: "/account/sign-in"
    }) }}
  </div>
{% endblock %}
