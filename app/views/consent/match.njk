{% extends "_layouts/default.njk" %}

{% set dateOfBirth = true %}
{% set title = __("consent.match.title") %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("home.show.title"),
      href: "/"
    }, {
      text: __("consent.list.title"),
      href: "/consents"
    }]
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    caption: __("consent.match.caption", { parent: consent.parent } ),
    title: title
  }) }}

  {{ card({
    heading: __("consent.summary"),
    headingClasses: "nhsuk-heading-m",
    descriptionHtml: summaryList({
      rows: summaryRows(consent.child, {
        fullAndPreferredNames: {},
        dobWithAge: {},
        address: {}
      })
    })
  }) }}

  {% set patientRows = [] %}
  {% for patient in results.page %}
    {% set patientRows = patientRows | push([
      {
        header: __("child.fullName.label"),
        html: link("/consents/" + consent.uuid + "/link?nhsn=" + patient.nhsn, patient.record.fullName) + ('<br><span class="nhsuk-u-font-size-16">Known as: ' + patient.preferredNames + "</span>" if patient.preferredNames)
      },
      {
        header: __("child.address.postalCode.label"),
        text: patient.record.address.postalCode or "Not provided"
      },
      {
        header: __("child.dob.label"),
        text: patient.record.formatted.dob or "Not provided",
        attributes: {
          "data-filter": patient.record.dob | date({ dateStyle: "short" }),
          "data-sort": patient.record.dob
        }
      }
    ]) %}
  {% endfor %}

  {% if patients.length %}
    {% call actionTable({
      id: "patients",
      classes: "app-patients nhsuk-u-margin-bottom-6",
      tableClasses: "app-patients__table",
      sort: "name",
      caption: "Children in this cohort",
      captionClasses: "nhsuk-u-font-size-24",
      responsive: true,
      head: [
        {
          text: __("child.fullName.label"),
          attributes: {
            "data-col": "name"
          }
        },
        {
          text: __("child.address.postalCode.label"),
          attributes: {
            "data-col": "postalCode"
          }
        },
        {
          text: __("child.dob.label"),
          attributes: {
            "data-col": "dob"
          }
        }
      ],
      rows: patientRows
    }) %}
      <action-table-filters class="app-patients__filters">
        {% set showPostalCode = true %}
        {% include "session/_filters.njk" %}
      </action-table-filters>
    {% endcall %}

    {{ govukPagination(pages) }}

    {{ __("patient.results", { results: results }) | nhsukMarkdown }}
  {% else %}
    <div class="app-patients">
      <p class="app-patients__no-results nhsuk-caption-m">{{ __n("patient.count", patients.length) }}</p>
    </div>
  {% endif %}
{% endblock %}
