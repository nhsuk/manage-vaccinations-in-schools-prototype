{% extends "_layouts/form.njk" %}

{% set title = __("consent.child.address.title") %}

{% block form %}
  {% call fieldset({
    legend: {
      html: heading({
        classes: "nhsuk-fieldset__legend--l",
        title: title
      })
    }
  }) %}
    <p class="nhsuk-hint">{{ __("consent.child.address.hint") }}</p>

    {{ input({
      label: { text: __("address.addressLine1.label") },
      autocomplete: "address-line1",
      decorate: "consent.child.address.addressLine1"
    }) }}

    {{ input({
      label: { text: __("address.addressLine2.label") + " (optional)" },
      autocomplete: "address-line2",
      decorate: "consent.child.address.addressLine2"
    }) }}

    {{ input({
      classes: "nhsuk-u-width-two-thirds",
      label: { text: __("address.addressLevel1.label") },
      autocomplete: "address-level1",
      decorate: "consent.child.address.addressLevel1"
    }) }}

    {{ input({
      classes: "nhsuk-input--width-10",
      label: { text: __("address.postalCode.label") },
      autocomplete: "postal-code",
      decorate: "consent.child.address.postalCode"
    }) }}
  {% endcall %}
{% endblock %}
