{% extends "_layouts/form.njk" %}

{% set title = __("consent.decision.title", { programme: programme }) %}

{% block form %}
  {{ radios({
    fieldset: {
      legend: {
        html: heading({
          classes: "nhsuk-fieldset__legend--l",
          title: title
        })
      }
    },
    hint: { text: __("consent.decision.hint.Flu") if programme.vaccine.type == ProgrammeType.Flu and programme.vaccine.method == VaccinationMethod.Nasal },
    items: [{
      text: __("consent.decision.yes." + programme.vaccine.type),
      value: ReplyDecision.Given
    }, {
      text: __("consent.decision.no"),
      value: ReplyDecision.Refused
    }],
    decorate: "consent.decision"
  }) }}
{% endblock %}
