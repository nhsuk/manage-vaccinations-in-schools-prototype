{% extends "_layouts/form.njk" %}

{% set title = __("default-batch.edit.title") %}

{% block form %}
  {{ heading({
    caption: session.location.name,
    title: title
  }) }}

  {% set batches = [] %}
  {% for batch in batchItems %}
    {% set batches = batches | push({
      html: batch.formatted.name,
      value: batch.id
    }) %}
  {% endfor %}

  {{ radios({
    fieldset: {
      legend: {
        classes: "nhsuk-fieldset__legend--m",
        text: vaccine.brandWithType
      }
    },
    items: batches,
    decorate: "data.token.batch." + session.id + "." + vaccine.gtin
  }) }}
{% endblock %}
