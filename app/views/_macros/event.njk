{% macro event(item, users) -%}
  {% if item.note -%}
  <blockquote>
    {{ item.note | nhsukMarkdown }}
  </blockquote>
  {%- endif %}
  <p class="nhsuk-body-s nhsuk-u-margin-0 nhsuk-u-secondary-text-color">
    {{ item.date | date({
      day: "numeric",
      month: "long",
      year: "numeric",
      hour: "numeric",
      minute: "2-digit",
      hour12: true
    }) }}
    {% if item.user_uid %}&middot;
      {{ link(users[item.user_uid].uri, users[item.user_uid].fullName) | safe }}
    {% endif %}
  </p>
{%- endmacro %}
