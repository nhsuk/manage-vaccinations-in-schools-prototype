{%- from "components/tag/macro.njk" import tag -%}
{%- macro env(params) -%}
{%- set colour = params.colour or "blue" -%}
<div class="app-env nhsuk-tag--{{ colour }}">
  <div class="nhsuk-width-container">
    {{ tag({
      classes: "nhsuk-tag--" + colour,
      text: params.name
    }) if params.name }}
    {{ params.html | safe if params.html else params.text }}
  </div>
</div>
{% endmacro %}
