{% extends "_layouts/default.njk" %}

{% set title = __("notice.list.title") %}

{% block content %}
  {{ super() }}

  {{ heading({
    size: "xl",
    title: title
  }) }}

  {% if notices.length %}
    {% set noticeRows = [] %}
    {% for notice in notices | sort(false, false, "created") %}
      {% set noticeRows = noticeRows | push([
        {
          header: __("notice.created.label"),
          html: notice.formatted.created,
          attributes: {
            "data-sort": notice.created
          }
        },
        {
          header: __("patient.label"),
          html: notice.patient.link.fullName
        },
        {
          header: __("patient.notice.label"),
          html: notice.patient.notice.name or "Not provided"
        },
        {
          header: __("actions.label"),
          html: actionList({
            items: [{
              text: __("actions.archive"),
              href: notice.uri + "/archive"
            }]
          }) if notice.type == NoticeType.Hidden else " "
        }
      ]) %}
    {% endfor %}

    {{ actionTable({
      id: "notices",
      sort: "date",
      heading: __n("notice.count", notices.length),
      panel: true,
      responsive: true,
      head: [
        { text: __("notice.created.label") },
        { text: __("patient.label") },
        { text: __("patient.notice.label") },
        { text: __("actions.label") }
      ],
      rows: noticeRows
    }) }}
  {% else %}
    {{ __n("notice.count", 0) | nhsukMarkdown }}
  {% endif %}
{% endblock %}
