{% from "upload/_navigation.njk" import uploadNavigation with context %}

{% extends "_layouts/default.njk" %}

{% set title = __("notice.list.title") + " â€“ " + __("upload.list.title") %}

{% block content %}
  {{ super() }}

  {{ uploadNavigation({
    view: "notices"
  }) }}

  {% if notices.length %}
    {% set noticeRows = [] %}
    {% for notice in notices %}
      {% set tableRow = notice.tableRow | push({
        header: __("actions.label"),
        html: appActionList({
          items: [{
            text: __("actions.archive"),
            href: notice.uri + "/archive"
          }]
        })
      }) %}
      {% set noticeRows = noticeRows | push(tableRow) %}
    {% endfor %}

    {{ table({
      id: "notices",
      heading: __mf("notice.count", { count: notices.length }),
      panel: true,
      responsive: true,
      head: [
        { text: __("patient.label") },
        { text: __("notice.createdAt.label") },
        { text: __("notice.label") },
        { text: __("actions.label") }
      ],
      rows: noticeRows
    }) }}
  {% else %}
    {{ __mf("notice.count", { count: 0 }) | nhsukMarkdown }}
  {% endif %}
{% endblock %}
