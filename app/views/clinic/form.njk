{% extends "_layouts/form.njk" %}

{% set title = __("clinic." + type + ".title") %}
{% set confirmButtonText = __("clinic." + type + ".confirm") %}

{% block form %}
  {% call fieldset({
    legend: {
      html: appHeading({
        classes: "nhsuk-fieldset__legend--l",
        title: title
      })
    }
  }) %}
    {{ input({
      label: { text: __("location.name.label") },
      decorate: "clinic.name"
    }) }}

    {{ input({
      label: { text: __("location.addressLine1.label") },
      autocomplete: "address-line1",
      decorate: "clinic.addressLine1"
    }) }}

    {{ input({
      label: { text: __("location.addressLine2.label") + " (optional)" },
      autocomplete: "address-line2",
      decorate: "clinic.addressLine2"
    }) }}

    {{ input({
      classes: "nhsuk-u-width-two-thirds",
      label: { text: __("location.addressLevel1.label") },
      autocomplete: "addressLevel1",
      decorate: "clinic.addressLevel1"
    }) }}

    {{ input({
      classes: "nhsuk-input--width-10",
      label: { text: __("location.postalCode.label") },
      autocomplete: "postal-code",
      decorate: "clinic.postalCode"
    }) }}
  {% endcall %}
{% endblock %}
