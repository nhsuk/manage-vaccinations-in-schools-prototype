{% call fieldset({
  legend: {
    classes: "nhsuk-fieldset__legend--s",
    text: "Filter results"
  }
}) %}
  {{ input({
    id: "name",
    name: "name",
    type: "search",
    label: { text: "By name" }
  }) }}

  {{ input({
    id: "dob",
    name: "dob",
    type: "search",
    label: { text: "By date of birth" },
    hint: {
      classes: "nhsuk-u-font-size-16",
      text: "e.g. 2005 or 01/03/2014"
    }
  }) }}

  {{ input({
    id: "postalCode",
    name: "postalCode",
    type: "search",
    label: { text: "By postcode" }
  }) if showPostalCode }}

  {{ checkboxes({
    name: "status",
    fieldset: {
      legend: {
        classes: "govuk-fieldset__legend--s",
        text: "Status"
      }
    },
    items: [
      { value: "Safe to vaccinate", text: "Safe to vaccinate" },
      { value: "Do not vaccinate", text: "Do not vaccinate" },
      { value: "No response", text: "No response" },
      { value: "Conflicting consent", text: "Conflicting consent" },
      { value: "Needs triage", text: "Needs triage" }
    ]
  }) if showStatus }}

  {{ button({
    classes: "nhsuk-button--secondary app-button--small nhsuk-u-margin-0",
    type: "reset",
    text: "Reset filters"
  }) }}
{% endcall %}
