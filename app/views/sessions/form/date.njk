{% extends "_layouts/form.njk" %}

{% set title = __("session.edit.date.title") %}

{% block form %}
  {{ heading({
    title: title
  }) }}

  {{ dateInput({
    fieldset: {
      legend: {
        classes: "nhsuk-fieldset__legend--m",
        text: __("session.date.label")
      }
    },
    hint: { text: __("session.date.hint") },
    decorate: "session.date_"
  }) }}

  {{ radios({
    fieldset: {
      legend: {
        classes: "nhsuk-fieldset__legend--m",
        text: __("session.time.label")
      }
    },
    items: [{
      text: "Morning"
    }, {
      text: "Afternoon"
    }, {
      text: "All day"
    }],
    decorate: "session.time"
  }) }}
{% endblock %}
