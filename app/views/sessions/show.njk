{% extends "_layouts/default.njk" %}

{% set title = session.location.name %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [
      {
        text: "Home",
        href: "/dashboard"
      },
      {
        text: __("campaign.list.title"),
        href: "/campaigns"
      },
      {
        text: data.campaigns[session.campaign_uuid].name,
        href: "/campaigns/" + session.campaign_uuid
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    classes: "nhsuk-u-margin-bottom-2",
    title: title
  }) }}

  <p class="nhsuk-caption-l nhsuk-u-margin-bottom-4">{{ session.formattedDate }} ({{ session.time }}) Â· {{ __n("session.cohort.count", patients.length) }}</p>

  <p class="nhsuk-body nhsuk-u-margin-bottom-7">
    {{ tag({
      classes: "nhsuk-tag--blue nhsuk-u-margin-right-3",
      text: session.status
    }) if session.status == SessionStatus.Active }}
    <a class="nhsuk-link" href="{{ session.uri }}/edit">{{
      __("session.edit.title")
    }}</a>
  </p>

  {% set consentCardDescriptionHtml %}
    <p>
      {{ __n("consent.NoResponse.count", patients | where("consent.value", ConsentOutcome.NoResponse) | length) }}<br>
      {{ __n("consent.Given.count", patients | where("consent.value", ConsentOutcome.Given) | length) }}<br>
      {{ __n("consent.Refused.count", patients | where("consent.value", ConsentOutcome.Refused) | length) }}<br>
      {{ __n("consent.Inconsistent.count", patients | where("consent.value", ConsentOutcome.Inconsistent) | length) }}
    </p>
  {% endset %}

  {% set captureCardDescriptionHtml %}
    <p>
      {{ __n("capture.Register.count", patients | where("capture.value", CaptureOutcome.Register) | length) }}<br>
      {{ __n("capture.GetConsent.count", patients | where("capture.value", CaptureOutcome.GetConsent) | length) }}<br>
      {{ __n("capture.NeedsTriage.count", patients | where("capture.value", CaptureOutcome.GetConsent) | length) }}<br>
      {{ __n("capture.Vaccinate.count", patients | where("capture.value", CaptureOutcome.Vaccinate) | length) }}
    </p>
  {% endset %}

  {% set outcomeCardDescriptionHtml %}
    <p>
      {{ __n("outcome.Vaccinated.count", patients | where("outcome.value", PatientOutcome.Vaccinated) | length) }}<br>
      {{ __n("outcome.CouldNotVaccinate.count", patients | where("outcome.value", PatientOutcome.CouldNotVaccinate) | length) }}<br>
      {{ __n("outcome.NoOutcomeYet.count", patients | where("outcome.value", PatientOutcome.NoOutcomeYet) | length) }}
    </p>
  {% endset %}

  <ul class="nhsuk-grid-row nhsuk-card-group">
    {% if session.status == SessionStatus.Active %}
      <li class="nhsuk-grid-column-one-half nhsuk-card-group__item">
        {{ card({
          clickable: true,
          heading: __("session.activity.capture.title"),
          headingClasses: "nhsuk-heading-m",
          href: session.uri + "/capture",
          descriptionHtml: captureCardDescriptionHtml
        }) }}
      </li>
      <li class="nhsuk-grid-column-one-half nhsuk-card-group__item">
        {{ card({
          clickable: true,
          heading: __("session.activity.outcome.title"),
          headingClasses: "nhsuk-heading-m",
          href: session.uri + "/outcome",
          descriptionHtml: outcomeCardDescriptionHtml
        }) }}
      </li>
    {% else %}
      <li class="nhsuk-grid-column-one-half nhsuk-card-group__item">
        {{ card({
          clickable: true,
          heading: __("session.activity.consent.title"),
          headingClasses: "nhsuk-heading-m",
          href:  session.uri + "/consent",
          descriptionHtml: consentCardDescriptionHtml
        }) }}
      </li>
      <li class="nhsuk-grid-column-one-half nhsuk-card-group__item">
        {{ card({
          clickable: true,
          heading: __("session.activity.triage.title"),
          headingClasses: "nhsuk-heading-m",
          href:  session.uri + "/triage",
          description: __n("triage.Needed.count", patients | where("triage.value", TriageOutcome.Needed) | length)
        }) }}
      </li>
    {% endif %}
  </ul>
{% endblock %}
