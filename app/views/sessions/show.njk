{% extends "_layouts/default.njk" %}

{% set title = session.location.name %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: __("campaign.list.title"),
      href: "/campaigns"
    }, {
      text: data.campaigns[session.campaign_uuid].name,
      href: "/campaigns/" + session.campaign_uuid
    }]
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    classes: "nhsuk-u-margin-bottom-2",
    title: title
  }) }}

  <p class="nhsuk-caption-l nhsuk-u-margin-bottom-4">{{ session.formattedDate }} ({{ session.time }}) Â· {{ __n("session.cohort.count", patients.length) }}</p>

  <p class="nhsuk-body nhsuk-u-margin-bottom-7">
    {{ tag({
      classes: "nhsuk-tag--blue nhsuk-u-margin-right-3",
      text: session.status
    }) if session.status == SessionStatus.Active else link(
      session.uri + "/edit",
      __("session.edit.title")
    ) | safe }}
  </p>
{% endblock %}
