{% extends "_layouts/form.njk" %}

{% set confirmButtonText = "Save changes" %}
{% set paths = { back: session.uri } %}
{% set title = __("session.edit.title") %}

{% block form %}
  {{ super() }}

  {{ heading({
    title: title
  }) }}

  {{ card({
    heading: "Details",
    headingClasses: "nhsuk-heading-m",
    descriptionHtml: summaryList({
      rows: summaryRows(session, {
        format: {
          href: session.uri + "/edit/format"
        },
        campaign_type: {
          value: session.campaign.name,
          href: session.uri + "/edit/campaign-type"
        },
        urn: {
          value: session.location.name,
          href: session.uri + "/edit/urn"
        },
        date: {
          value: session.date | dateWithDayOfWeek,
          href: session.uri + "/edit/date"
        },
        time: {
          value: session.time,
          href: session.uri + "/edit/date"
        },
        open: {
          value: session.open | dateWithDayOfWeek,
          href: session.uri + "/edit/schedule"
        },
        reminder: {
          value: session.reminder | dateWithDayOfWeek,
          href: session.uri + "/edit/schedule"
        },
        close: {
          value: session.close | dateWithDayOfWeek,
          href: session.uri + "/edit/schedule"
        }
      })
    })
  }) }}
{% endblock %}
