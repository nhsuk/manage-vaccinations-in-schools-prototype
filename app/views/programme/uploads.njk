{% extends "_layouts/default.njk" %}

{% set title = programme.name + " â€“ " + __("programme.uploads.title") %}
{% set view = "uploads" %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("programme.list.title"),
      href: "/programmes"
    }],
    text: programme.name,
    href: programme.uri
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    title: programme.name,
    summary: programme.cycle
  }) }}

  {% include "programme/_secondary-navigation.njk" %}

  <h2 class="nhsuk-heading-m nhsuk-u-visually-hidden">
    {{ __("programme.uploads.title") }}
  </h2>

  {{ button({
    classes: "app-button--secondary",
    text: __("upload.new.label"),
    href: programme.uri + "/uploads/new"
  }) }}

  {% if uploads.length %}
    {% set uploadRows = [] %}
    {% for upload in uploads | sort(false, false, "created") %}
      {% set uploadRows = uploadRows | push([
        {
          header: __("upload.created.label"),
          html: link(upload.uri, upload.formatted.created),
          attributes: {
            "data-col": "created",
            "data-sort": upload.created
          }
        },
        {
          header: __("upload.created_user_uid.label"),
          html: users[upload.created_user_uid].fullName or "Not provided"
        },
        {
          header: __("upload.vaccinations.label"),
          html: upload.vaccinations.length or "None",
          format: "numeric"
        }
      ]) %}
    {% endfor %}

    {{ actionTable({
      id: "uploads",
      sort: "created",
      heading: __n("programme.uploads.count", uploads.length) ,
      panel: true,
      responsive: true,
      head: [
        { text: __("upload.created.label") },
        { text: __("upload.created_user_uid.label") },
        {
          text: __("upload.vaccinations.label"),
          format: "numeric",
          attributes: {
            "no-sort": "no-sort"
          }
        }
      ],
      rows: uploadRows
    }) }}
  {% else %}
    {{ __n("programme.uploads.count", uploads.length) | nhsukMarkdown }}
  {% endif %}
{% endblock %}
