{% extends "_layouts/default.njk" %}

{% set title = serviceName + " (Mavis)" %}

{% block content %}
  {{ super() }}

  {{ appHeading({
    size: "xl",
    title: title
  }) }}

  {{ warningCallout({
    heading: __("notice.list.title"),
    html: link("/uploads/notices", __mf("notice.warning", { count: notices.length }), {
      classes: "nhsuk-link--no-visited-state"
    }) | nhsukMarkdown
  }) if notices.length }}

  <ul class="nhsuk-grid-row nhsuk-card-group">
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        heading: __("programme.list.title"),
        headingClasses: "nhsuk-heading-m",
        href: "/programmes",
        descriptionHtml: __("programme.list.description") | nhsukMarkdown
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        heading: __("session.list.title"),
        headingClasses: "nhsuk-heading-m",
        href: "/sessions",
        descriptionHtml: __("session.list.description") | nhsukMarkdown
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        heading: __("patient.list.title"),
        headingClasses: "nhsuk-heading-m",
        href: "/patients",
        descriptionHtml: __("patient.list.description") | nhsukMarkdown
      }) }}
    </li>
  </ul>

  <ul class="nhsuk-grid-row nhsuk-card-group">
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("consent.list.title"),
        headingClasses: "nhsuk-heading-s",
        href: "/consents",
        description: __("consent.list.description")
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("move.list.title"),
        headingClasses: "nhsuk-heading-s",
        href: "/moves",
        description: __("move.list.description")
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("upload.list.title"),
        headingClasses: "nhsuk-heading-s",
        href: "/uploads",
        description: __("upload.list.description")
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("vaccine.list.title"),
        headingClasses: "nhsuk-heading-s",
        href: "/vaccines",
        description: __("vaccine.list.description")
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("organisation.show.title"),
        headingClasses: "nhsuk-heading-s",
        href: "/organisations/" + data.organisation.code,
        description: __("organisation.show.description")
      }) }}
    </li>
    <li class="nhsuk-grid-column-one-third nhsuk-card-group__item">
      {{ card({
        clickable: true,
        secondary: true,
        heading: __("manual.show.title"),
        headingClasses: "nhsuk-heading-s",
        href: "https://guide.manage-vaccinations-in-schools.nhs.uk",
        description: __("manual.show.description")
      }) }}
    </li>
  </ul>
{% endblock %}
