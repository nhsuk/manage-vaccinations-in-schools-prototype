{% extends "_layouts/default.njk" %}

{% set title = serviceName + " (MAVIS)" %}

{% block content %}
  <div class="nhsuk-u-width-two-thirds">
    {{ super() }}

    {{ heading({
      size: "xl",
      title: title
    }) }}

    {% if data.token.admin %}
    <h2 class="nhsuk-heading-m nhsuk-u-margin-bottom-1">
      <a href="/vaccines">Manage vaccines</a>
    </h2>
    <p>Add or remove batches</p>

    <h2 class="nhsuk-heading-m nhsuk-u-margin-bottom-1">
      <a href="/users">Manage team</a>
    </h2>
    <p>Add or remove team members and set permissions</p>
    {% endif %}

    <h2 class="nhsuk-heading-m nhsuk-u-margin-bottom-1">
      <a href="/account">Your account</a>
    </h2>
    <p>Change your email address or password</p>
  </div>
{% endblock %}
