{% extends "_layouts/default.njk" %}

{% set paths = { back: false } %}
{% set title = __("consent.confirmation.title." + consent.decision) %}
{% set text = __("consent.confirmation.text." + consent.decision, {
  programme: programme,
  consent: consent,
  session: session
}) %}
{% set description = __("consent.confirmation.description." + consent.decision, {
  consent: consent
}) %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      {{ panel({
        titleText: title,
        text: text | safe
      }) }}

      {{ description | nhsukMarkdown }}
    </div>
  </div>
{% endblock %}
