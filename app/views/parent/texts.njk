{% extends "_layouts/texts.njk" %}

{% if session.programmes.length == 1 %}
  {% set caption = __("consent.start.title.single", { session: session }) | safe %}
{% else %}
  {% set caption = __("consent.start.title.multiple", { session: session }) | safe %}
{% endif %}

{% set placeholders = {
  programme: programme,
  consent: consent,
  team: data.team,
  reason: "they were absent from the session",
  session: session
} %}

{% set defaultTemplate = "invite" %}
{% set dir = "consent" %}
{% set templates = {
  "Invite": [
    "invite",
    "invite-reminder",
    "invite-clinic",
    "invite-clinic-reminder",
    "invite-clinic-consent"
  ],
  "Consent": [
    "consent-already-vaccinated" if programme.type == ProgrammeType.MMR,
    "consent-given",
    "consent-given-child",
    "consent-refused"
  ],
  "Record": [
    "record-reminder",
    "record-reminder-child",
    "record-vaccinated",
    "record-could-not-vaccinate"
  ]
} %}
