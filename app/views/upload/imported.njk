{% from "upload/_navigation.njk" import uploadNavigation with context %}

{% extends "_layouts/default.njk" %}

{% set title = __("upload.imported.title") %}

{% block content %}
  {{ super() }}

  {{ uploadNavigation({
    view: "imported"
  }) }}

  {% if imported.length %}
    {% set uploadRows = [] %}
    {% for upload in imported %}
      {% set uploadRows = uploadRows | push([
        {
          header: __("upload.summary.label"),
          html: upload.link.summary
        },
        {
          header: __("upload.type.label"),
          html: upload.summary.type or "None"
        },
        {
          header: __("upload.status.label"),
          html: upload.formatted.status + ("<br><span class=\"nhsuk-u-secondary-text-colour nhsuk-u-font-size-16\">5 hours 13 minutes remaining</span>" if upload.status == UploadStatus.Processing)
        },
        {
          header: __("upload.patients.label"),
          html: "â€¦" if upload.status == UploadStatus.Processing else upload.patients.length | string,
          format: "numeric"
        }
      ]) %}
    {% endfor %}

    {{ table({
      id: "uploads",
      heading: __mf("upload.imported.count", { count: uploads.length }) ,
      panel: true,
      responsive: true,
      head: [
        { text: __("upload.summary.label") },
        { text: __("upload.type.label") },
        { text: __("upload.status.label") },
        {
          text: __("upload.patients.label"),
          format: "numeric"
        }
      ],
      rows: uploadRows
    }) }}
  {% endif %}
{% endblock %}
