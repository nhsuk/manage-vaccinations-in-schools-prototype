{% extends "_layouts/session.njk" %}

{% set title = patient.fullName + " â€“ " + __("patient.events.title") %}
{% set heading = patientSession.patient.fullName %}
{% set caption = patientSession.formatted.yearGroup %}
{% set view = "events" %}

{% block beforeContent %}
  {{ breadcrumb({
    classes: "nhsuk-breadcrumb--reverse",
    items: [{
      text: session.name,
      href: session.uri
    }, {
      text: __("session." + activity + ".label"),
      href: session.uri + "/" + activity
    }]
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {% include "patient-session/_note.njk" %}

  {% if patientSession.pinnedNotes.length %}
    {% for auditEvent in patientSession.pinnedNotes %}
      {{ card({
        classes: "app-card--yellow",
        heading: auditEvent.name,
        headingLevel: 4,
        feature: true,
        descriptionHtml: appEvent({ auditEvent: auditEvent, showProgrammes: true })
      }) }}
    {% endfor %}
  {% endif %}

  {{ appTimeline({
    items: timelineItems(patientSession.auditEventLog)
  }) }}
{% endblock %}
