{% extends "_layouts/form.njk" %}

{% set title = __("triage.edit.title") %}

{% block form %}
  {{ heading({
    caption: patient.fullName,
    title: title
  }) }}

  {{ radios({
    fieldset: {
      legend: { text: __("triage.label", { patient: patient }) }
    },
    items: triageOutcomeItems(patientSession),
    decorate: "triage.outcome"
  }) }}

  {{ textarea({
    label: {
      text: __("triage.note.label") + " (optional)"
    },
    rows: 5,
    decorate: "triage.note"
  }) }}
{% endblock %}
