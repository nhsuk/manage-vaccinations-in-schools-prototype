{% from "session/_navigation.njk" import sessionNavigation with context %}

{% extends "_layouts/default.njk" %}

{% set title = session.location.name + " (" + session.academicYear + ")" %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("home.show.title"),
      href: "/"
    }],
    text: __("session.list.title"),
    href: "/sessions"
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ sessionNavigation({
    session: session,
    view: "show"
  }) }}

  {% set cardDescriptionHtml %}
    {{ session.formatted.status | nhsukMarkdown }}

    {% if not session.isUnplanned %}
      {{ appHeading({
        classes: "nhsuk-u-margin-bottom-2",
        level: 4,
        size: "s",
        title: __("session.dates.label")
      }) }}

      {{ session.formatted.dates | safe }}

      {{ session.formatted.consentWindow | nhsukMarkdown if session.isPlanned }}
    {% endif %}

    {{ appHeading({
      classes: "nhsuk-u-margin-bottom-2",
      level: 4,
      size: "s",
      title: __("session.show.summary")
    }) }}

    {{ summaryList({
      rows: [
        {
          key: {
            text: __("session.patients.label")
          },
          value: {
            text: session.formatted.patients
          },
          actions: {
            items: [{
              text: __("session.upload-class-list.title"),
              href: "/uploads/new?type=" + UploadType.School + "&urn=" + session.school.urn if session.type == SessionType.School
            }]
          }
        },
        sessionActivityRow("checkRefusal"),
        sessionActivityRow("checkGiven") if not session.offersAlternativeVaccine,
        sessionActivityRow("checkGivenForNasalSpray") if session.offersAlternativeVaccine,
        sessionActivityRow("checkGivenForInjection") if session.offersAlternativeVaccine,
        sessionActivityRow("report") if not session.offersAlternativeVaccine,
        sessionActivityRow("reportNasalSprays") if session.offersAlternativeVaccine,
        sessionActivityRow("reportInjections") if session.offersAlternativeVaccine
      ]
    }) }}

    {% if not session.isUnplanned %}
      {{ appHeading({
        classes: "nhsuk-u-margin-bottom-2",
        level: 4,
        size: "s",
        title: __("session.activity.label")
      }) }}

      {{ summaryList({
        rows: [
          {
            key: {
              text: __("session.consents.label")
            },
            value: {
              html: link(session.uri + "/consents", __n("consent.count", session.consents.length))
            }
          } if session.consents.length,
          sessionActivityRow("getConsent"),
          sessionActivityRow("followUp"),
          sessionActivityRow("resolveConsent"),
          sessionActivityRow("triage"),
          sessionActivityRow("instruct") if session.psdProtocol,
          sessionActivityRow("register"),
          sessionActivityRow("record")
        ]
      }) }}
    {% endif %}

    {{ appButtonGroup({
      buttons: [{
        classes: "nhsuk-button--secondary",
        text: __("session.schedule.title") if session.isUnplanned else __("session.edit.title"),
        href: session.uri + "/edit"
      }, {
        classes: "nhsuk-button--secondary",
        text: __("session.close.title"),
        href: session.uri + "/close"
      } if session.isCompleted],
      links: [{
        text: __("session.offline.title"),
        href: session.uri + "/offline"
      } if not session.isUnplanned]
    }) }}
  {% endset %}

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-three-quarters">
      {{ card({
        heading: session.type,
        headingLevel: 3,
        descriptionHtml: cardDescriptionHtml
      }) }}
    </div>

    <div class="nhsuk-grid-column-one-quarter">
      {{ appHeading({
        classes: "nhsuk-u-margin-top-5",
        level: 3,
        size: "s",
        title: session.location.name
      }) }}
      {{ summaryList({
        classes: "nhsuk-summary-list--no-border app-summary-list--full-width",
        rows: summaryRows(session, {
          school_urn: {},
          address: {},
          consentForms: {}
        })
      }) }}
    </div>
  </div>
{% endblock %}
