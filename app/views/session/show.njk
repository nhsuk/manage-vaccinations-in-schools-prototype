{% extends "_layouts/default.njk" %}

{% set title = session.location.name %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("home.show.title"),
      href: "/"
    }],
    text: __("session.list.title"),
    href: "/sessions"
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    title: title,
    summary: ("URN: " + session.formatted.school_urn) | safe if session.type == SessionType.School
  }) }}

  {{ actionList({
    items: [{
      tag: statusTag(session.sessionStatus)
    }, {
      text: __("session.download-consent-form.title"),
      href: "/public/downloads/hpv-consent-form.pdf",
      attributes: {
        download: true
      }
    } if programme.type == ProgrammeType.HPV and session.status != SessionStatus.Completed, {
      text: __("session.offline.title"),
      href: session.uri + "/offline"
    } if session.status == SessionStatus.Planned, {
      text: __("session.import-class-list.title"),
      href: session.programmes[0].uri + "/imports/new?type=" + ImportType.School
    } if session.type == SessionType.School]
  }) }}

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      <ul class="nhsuk-grid-row nhsuk-card-group">
        {% if session.status == SessionStatus.Unplanned %}
          <li class="nhsuk-grid-column-full nhsuk-card-group__item">
            {{ card({
              clickable: true,
              heading: __("session.schedule.title"),
              headingClasses: "nhsuk-heading-m",
              href: session.uri + "/edit",
              description: __("session.schedule.description")
            }) }}
          </li>
        {% endif %}
        {% if session.isActive %}
          <li class="nhsuk-grid-column-full nhsuk-card-group__item">
            {% set captureCardDescriptionHtml %}
              <p>
                {{ __n("capture.Register.count", session.patients | where("capture.value", CaptureOutcome.Register) | length) }}<br>
                {{ __n("capture.GetConsent.count", session.patients | where("capture.value", CaptureOutcome.Given) | length) }}<br>
                {{ __n("capture.CheckRefusal.count", session.patients | where("capture.value", CaptureOutcome.CheckRefusal) | length) }}<br>
                {{ __n("capture.NeedsTriage.count", session.patients | where("capture.value", CaptureOutcome.NeedsTriage) | length) }}<br>
                {{ __n("capture.Vaccinate.count", session.patients | where("capture.value", CaptureOutcome.Vaccinate) | length) }}
              </p>
            {% endset %}
            {{ card({
              clickable: true,
              heading: __("session.activity.capture.title"),
              headingClasses: "nhsuk-heading-m",
              href: session.uri + "/capture",
              descriptionHtml: captureCardDescriptionHtml
            }) }}
          </li>
        {% endif %}
        {% if
          session.isActive or
          session.status == SessionStatus.Completed or
          session.status == SessionStatus.Closed
        %}
          <li class="nhsuk-grid-column-full nhsuk-card-group__item">
            {% set outcomeCardDescriptionHtml %}
              <p>
                {{ __n("outcome.Vaccinated.count", session.patients | where("outcome.value", PatientOutcome.Vaccinated) | length) }}<br>
                {{ __n("outcome.CouldNotVaccinate.count", session.patients | where("outcome.value", PatientOutcome.CouldNotVaccinate) | length) }}<br>
                {{ __n("outcome.NoOutcomeYet.count", session.patients | where("outcome.value", PatientOutcome.NoOutcomeYet) | length) }}
              </p>
            {% endset %}
            {{ card({
              clickable: true,
              heading: __("session.activity.outcome.title"),
              headingClasses: "nhsuk-heading-m",
              href: session.uri + "/outcome",
              descriptionHtml: outcomeCardDescriptionHtml
            }) }}
          </li>
        {% endif %}
        {% if session.status == SessionStatus.Planned and not session.isActive %}
          <li class="nhsuk-grid-column-full nhsuk-card-group__item">
            {% set consentCardDescriptionHtml %}
              <p>
                {{ __n("consent.NoResponse.count", session.patients | where("consent.value", ConsentOutcome.NoResponse) | length) }}<br>
                {{ __n("consent.Given.count", session.patients | where("consent.value", ConsentOutcome.Given) | length) }}<br>
                {{ __n("consent.Refused.count", session.patients | where("consent.value", ConsentOutcome.Refused) | length) }}<br>
                {{ __n("consent.Inconsistent.count", session.patients | where("consent.value", ConsentOutcome.Inconsistent) | length) }}
              </p>
            {% endset %}
            {{ card({
              clickable: true,
              heading: __("session.activity.consent.title"),
              headingClasses: "nhsuk-heading-m",
              href:  session.uri + "/consent",
              descriptionHtml: consentCardDescriptionHtml
            }) }}
          </li>
          <li class="nhsuk-grid-column-full nhsuk-card-group__item">
            {{ card({
              clickable: true,
              heading: __("session.activity.triage.title"),
              headingClasses: "nhsuk-heading-m",
              href:  session.uri + "/triage",
              description: __n("triage.Needed.count", session.patients | where("triage.value", TriageOutcome.Needed) | length)
            }) }}
          </li>
        {% endif %}
      </ul>
    </div>

    <div class="nhsuk-grid-column-one-third">
      {{ summaryList({
        classes: "app-summary-list--full-width nhsuk-u-margin-bottom-4",
        rows: summaryRows(session, {
          type: {},
          programmes: {},
          dates: {},
          consentWindow: {},
          consentUrl: {},
          patients: {
            value: __n("session.patients.count", session.patients.length)
          }
        })
      }) }}

      {{ button({
        classes: "app-button--secondary",
        text: __("session.edit.title"),
        href: session.uri + "/edit"
      }) if session.status != SessionStatus.Unplanned and session.status != SessionStatus.Closed }}

      {{ button({
        classes: "app-button--secondary",
        text: __("session.close.title"),
        href: session.uri + "/close"
      }) if session.status == SessionStatus.Completed }}
    </div>
  </div>
{% endblock %}
