{% extends "_layouts/form.njk" %}

{% set confirmButtonText = __("session.new.check-answers.confirm") %}
{% set title = __("session.new.check-answers.title") %}

{% block form %}
  {{ heading({
    title: title
  }) }}

  {{ card({
    heading: __("session.new.check-answers.summary"),
    headingClasses: "nhsuk-heading-m",
    descriptionHtml: summaryList({
      rows: summaryRows(session, {
        format: {
          href: session.uri + "/new/format"
        },
        programmes: {
          href: session.uri + "/new/programmes"
        },
        urn: {
          value: session.location.name,
          href: session.uri + "/new/urn"
        },
        date: {
          href: session.uri + "/new/date"
        },
        open: {
          href: session.uri + "/new/schedule"
        },
        reminder: {
          value: session.reminder | date({ dateStyle: "full" }),
          href: session.uri + "/new/schedule"
        },
        close: {
          value: session.close | date({ dateStyle: "full" }),
          href: session.uri + "/new/schedule"
        }
      })
    })
  }) }}
{% endblock %}
