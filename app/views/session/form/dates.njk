{% extends "_layouts/form.njk" %}

{% set title = __("session.edit.dates.title") %}

{% block form %}
  {{ heading({
    title: title
  }) }}

  {% for date in session.dates_ %}
    {{ dateInput({
      formGroup: {
        classes: "nhsuk-u-margin-bottom-6"
      },
      fieldset: {
        legend: {
          classes: "nhsuk-fieldset__legend--m",
          text: (loop.index | ordinal | title) + " session"
        }
      },
      hint: { text: __("session.date.hint") },
      values: date,
      id: "session-dates-" + loop.index0,
      namePrefix: "[session][dates_][" + loop.index0 + "]"
    }) }}
  {% endfor %}
{% endblock %}
