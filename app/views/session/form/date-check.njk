{% extends "_layouts/form.njk" %}

{% set title = __("session.date.check.title", session.programmeNames.sentenceCase) %}
{% set hideConfirmButton = true %}


{% block form %}
  {% call panel({
    classes: "app-panel--interruption",
    titleText: title
  }) %}
    {{ __("session.date.check.description", {
      date: session.formatted.date,
      yearGroups: session.programmes[0].formatted.yearGroups
    }) | nhsukMarkdown }}

    {{ appButtonGroup({
      buttons: [{
        classes: "nhsuk-button--reverse",
        text: __("session.date.check.confirm")
      }],
      links: [{
        text: __("session.date.check.cancel")
      }]
    }) }}
  {% endcall %}
{% endblock %}
