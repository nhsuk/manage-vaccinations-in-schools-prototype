{% extends "_layouts/form.njk" %}

{% set title = __("session.reminders.title") %}

{% block form %}
  {{ heading({
    title: title
  }) }}

  {{ dateInput({
    fieldset: {
      legend: { text: __("session.reminder.title") }
    },
    hint: { text: __("session.reminder.hint") },
    decorate: "session.reminder_"
  }) }}

  {{ input({
    classes: "nhsuk-input--width-2",
    label: { text: __("session.reminderInt.title") },
    suffix: "days",
    decorate: "session.reminderInt"
  }) }}
{% endblock %}
