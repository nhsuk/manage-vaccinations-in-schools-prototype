{% extends "_layouts/form.njk" %}

{% set title = __("session.registration.title") %}

{% block form %}
  {{ radios({
    fieldset: {
      legend: {
        classes: "nhsuk-fieldset__legend--l",
        html: appHeading({
          caption: session.location.name if type == "edit",
          title: title
        })
      }
    },
    items: booleanItems,
    decorate: "session.registration"
  }) }}
{% endblock %}
