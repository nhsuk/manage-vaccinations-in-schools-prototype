{%- macro _defaultBatch(defaultBatch) %}
{{ defaultBatch.vaccine.brandWithType }}: {{ defaultBatch.formatted.id | safe }}
<a class="nhsuk-link nhsuk-u-margin-left-2" href="{{ defaultBatch.session.uri }}/default-batch/{{ defaultBatch.vaccine_snomed }}">
  {{- __("defaultBatch.label", { vaccine: defaultBatch.vaccine }) | safe -}}
</a>
{%- endmacro %}
<h3 class="nhsuk-heading-m nhsuk-u-margin-bottom-2">
  {{ __n("defaultBatch.count", defaultBatch.length) }}
</h3>
{% if defaultBatches.length == 1 %}
  <p class="nhsuk-body">
    {{ _defaultBatch(defaultBatches[0]) }}
  </p>
{% else %}
  <ul class="nhsuk-list nhsuk-list--bullet">
  {% for defaultBatch in defaultBatches %}
    <li>{{ _defaultBatch(defaultBatch) }}</li>
  {% endfor %}
  </ul>
{% endif %}
