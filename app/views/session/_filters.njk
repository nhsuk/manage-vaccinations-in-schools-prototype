{% call fieldset({
  legend: {
    classes: "nhsuk-fieldset__legend--s",
    text: "Filter results"
  }
}) %}
  {{ input({
    id: "name",
    name: "name",
    type: "search",
    label: { text: "Name" }
  }) }}

  {{ input({
    id: "dob",
    name: "dob",
    type: "search",
    label: { text: "Date of birth" },
    hint: {
      classes: "nhsuk-u-font-size-16",
      text: "e.g. 2005 or 01/03/2014"
    }
  }) if showDateOfBirth }}

  {{ input({
    id: "postalCode",
    name: "postalCode",
    type: "search",
    label: { text: "Postcode" }
  }) if showPostalCode }}

  {{ checkboxes({
    name: "yearGroup",
    fieldset: {
      legend: { text: "Year group" }
    },
    items: [
      { value: "0", text: 0 | yearGroup },
      { value: "1", text: 1 | yearGroup },
      { value: "2", text: 2 | yearGroup },
      { value: "3", text: 3 | yearGroup },
      { value: "4", text: 4 | yearGroup },
      { value: "5", text: 5 | yearGroup },
      { value: "6", text: 6 | yearGroup }
    ] if session.school.phase == "Primary" else [
      { value: "7", text: 7 | yearGroup },
      { value: "8", text: 8 | yearGroup },
      { value: "9", text: 9 | yearGroup },
      { value: "10", text: 10 | yearGroup },
      { value: "11", text: 11 | yearGroup }
    ]
  }) if showYearGroup }}

  {{ checkboxes({
    name: "status",
    fieldset: {
      legend: { text: "Status" }
    },
    items: [
      { value: "Ready for nurse", text: "Ready for nurse" },
      { value: "Do not vaccinate", text: "Do not vaccinate" },
      { value: "No response", text: "No response" },
      { value: "Conflicting consent", text: "Conflicting consent" },
      { value: "Needs triage", text: "Needs triage" }
    ]
  }) if showStatus }}

  {{ button({
    classes: "nhsuk-button--secondary app-button--small nhsuk-u-margin-0",
    type: "reset",
    text: "Reset filters"
  }) }}
{% endcall %}
