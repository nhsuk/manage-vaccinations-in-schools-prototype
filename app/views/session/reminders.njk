{% extends "_layouts/form.njk" %}

{% set title = __("session.reminders.title") %}
{% set confirmButtonText = __("session.reminders.confirm") %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("home.show.title"),
      href: "/"
    }, {
      text: __("session.list.title"),
      href: "/sessions"
    }, {
      text: session.location.name,
      href: session.uri
    }]
  }) }}
{% endblock %}

{% block form %}
  {{ appHeading({
    title: title
  }) }}

  {{ __("session.reminders.description") | nhsukMarkdown }}

  {{ appHeading({
    classes: "nhsuk-u-margin-bottom-2",
    level: 2,
    size: "m",
    title: __("session.date.label")
  }) }}

  {{ session.formatted.date | nhsukMarkdown }}

  {% set detailsHtml %}
    {{ __("session.reminderDate.description") | nhsukMarkdown }}

    {{ session.formatted.reminderDate | nhsukMarkdown }}
  {% endset %}

  {{ details({
    summaryText: __("session.reminderDate.label"),
    html: detailsHtml
  }) }}

  {% call insetText() %}
    {{ appHeading({
      classes: "nhsuk-u-margin-bottom-2",
      level: 3,
      size: "s",
      title: __("session.reminders.activity", {
        parents: session.tally(session.programmes[0].id, PatientStatus.Consent),
        patients: session.tally(session.programmes[0].id)
      })
    }) }}

    {{ __("session.nextReminderDate.text", session.formatted.nextReminderDate) | nhsukMarkdown }}
  {% endcall %}

  {{ appHeading({
    classes: "nhsuk-u-margin-bottom-2",
    level: 2,
    size: "m",
    title: "Send parents a manual consent reminder"
  }) }}

  {{ __("session.reminders.preConfirm") | nhsukMarkdown }}
{% endblock %}
