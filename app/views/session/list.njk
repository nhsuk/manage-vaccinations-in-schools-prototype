{% extends "_layouts/default.njk" %}

{% set title = __("session.list.title") + " â€“ " + __("session.list." + view + ".label") %}

{% block content %}
  {{ super() }}

  <div class="app-heading-group">
    {{ heading({
      size: "xl",
      title: __("session.list.title")
    }) }}

    {{ button({
      text: __("session.new.title"),
      href: "/sessions/new"
    }) }}
  </div>

  {% include "session/_list-navigation.njk" %}

  {% if sessions.length %}
    {% set sessionRows = [] %}
    {% for session in sessions %}
      {% set sessionRows = sessionRows | push([
        {
          header: __("session.location.label"),
          html: session.link.location or "Not provided"
        },
        {
          header: __("session.date.label"),
          text: session.formatted.date or "Not provided",
          attributes: {
            "data-sort": session.date
          }
        },
        {
          header: __("session.programmes.label"),
          html: data.programmes[session.programmes[0]].name or "Not provided"
        },
        {
          header: __("session.patients.label"),
          html: session.patients.length or "None",
          format: "numeric"
        }
      ]) %}
    {% endfor %}

    {{ actionTable({
      id: "sessions",
      sort: "date",
      heading: __n("session.list." + view + ".count", sessions.length),
      panel: true,
      responsive: true,
      head: [
        { text: __("session.location.label") },
        { text: __("session.time.label") },
        { text: __("session.programmes.label") },
        {
          text: __("session.patients.label"),
          format: "numeric",
          attributes: {
            "no-sort": "no-sort"
          }
        }
      ],
      rows: sessionRows
    }) }}
  {% else %}
    {{ __n("session.list." + view + ".count", 0) | nhsukMarkdown }}
  {% endif %}
{% endblock %}
