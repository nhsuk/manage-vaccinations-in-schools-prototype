{% extends "_layouts/form.njk" %}

{% set confirmButtonText = __("organisation.edit.confirm") %}
{% set title = __("organisation.edit.title") %}

{% block form %}
  {{ super() }}

  {{ heading({
    caption: organisation.name,
    title: title
  }) }}

  {{ card({
    heading: __("organisation.contact.summary"),
    headingClasses: "nhsuk-heading-m",
    descriptionHtml: summaryList({
      rows: summaryRows(organisation, {
        email: {
          href: organisation.uri + "/edit/contact"
        },
        tel: {
          href: organisation.uri + "/edit/contact"
        }
      })
    })
  }) }}

  {{ card({
    heading: __("organisation.consent.summary"),
    headingClasses: "nhsuk-heading-m",
    descriptionHtml: summaryList({
      rows: summaryRows(organisation, {
        sessionOpenDelay: {
          href: organisation.uri + "/edit/consent"
        },
        sessionReminderDelay: {
          href: organisation.uri + "/edit/reminders"
        },
        sessionReminderInt: {
          href: organisation.uri + "/edit/reminders"
        },
        sessionReminderMax: {
          href: organisation.uri + "/edit/reminders"
        },
        sessionReminderMethod: {
          href: organisation.uri + "/edit/reminders"
        }
      })
    })
  }) }}
{% endblock %}
